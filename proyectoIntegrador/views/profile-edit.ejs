<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partial/head') %> 

<body>
	<!-- Header -->
	<% if (locals.usuario.mail) { %>
		<%- include('./partial/headerLogueado') %>
	<% } else { %>
		<%- include('./partial/header') %> 
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">EDITAR MI PERFIL</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<form class= "formulario" action="/" method="GET">
				<p>
				<label for="Nombre"> Nombre: </label>
				<input type="text" name="Nombre" id="Nombre">
				</p>
	
				<p>
				<label for="Apellido"> Apellido: </label>
				<input type="text" name="Apellido" id="Apellido">
				</p>
	
				<p>
				<label for="email"> Email: </label>
				<input type="text" name="email" id="email">
				</p>

				<p>
				<label for="Imagen"> URL de imagen: </label>
				<input type="url" name="imagen" id="Imagen">
				</p>

				<p>
				<label for="descripcion"> Descripcion: </label>
				<input type="texto" name="descripcion" id="descripcion">
				</p>

				<p>
				<input type="submit" value="Confirmar">
				</p>

			</form>
		</div>
    </div>
	<!-- footer -->
	<%- include('./partial/footer') %> 
	<!-- /footer -->
</body>

</html>