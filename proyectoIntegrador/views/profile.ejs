<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head') %> 
<body>
	<!-- Header -->
	<%- include('./partial/headerLogueado') %> 
	
	<!-- /Header -->

	<!-- Datos del usuario -->
	<% for(let i=0; i < usuarios.length; i++){%> 
		<% if(usuarios[i].id_usuario == idUsuario){ %> 
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="<% if(usuarios[i].imagen == null){
						"https://via.placeholder.com/150" 
					} else {
						usuarios[i].imagen 
					}%> " alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"> <%= usuarios[i].nombre + usuarios[i].apellido %> 
							<a href="/profile-edit/<%= usuarios[i].id %>">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class="">
							<li><%= usuarios[i].cantidad_productos%> Productos</li>
							<li><%= usuario[i].numero_seguidores%> Seguidores</li>
							<li><%= usuario[i].numero_comentarios%> Comentarios</li>
						</ul>
				</div>
			
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
			<!-- Show mis productos -->
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product.html">
							<figure class="product-box_image">
								<img src="images/products/default-image.png" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2>Nombre del producto</h2>
								<p>Descripci√≥n corta del producto Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque delectus ex</p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			</div>
		</div>
		<% } %> 
	<% } %> 
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partial/footer') %> 
	<!-- /footer -->
</body>	
</html>