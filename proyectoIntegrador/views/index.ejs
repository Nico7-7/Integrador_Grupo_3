<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partial/head') %> 
<body>
	<!-- Header -->
	<% if (locals.usuario.mail) { %>
		<%- include('./partial/headerLogueado') %>
	<% } else { %>
		<%- include('./partial/header') %> 
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="">
		<img class="imagenCripto" src="/images/banner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="font-family" class="products-title" >NOVEDADES</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < 8; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/producto/detalleproduct/<%=cripto[i].id%>">
						<figure class="product-box_image">
							<img src="<%=cripto[i].url_imagen%>" alt="<%=cripto[i].nombre_producto%>">
						</figure>
						<article class="product-box_data">
							<h2><%=cripto[i].nombre_producto%></h2>
							<p><%=cripto[i].descripcion_corta%></p>
							<p>Comentarios: <%=cripto[i].num_comentarios%></p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="font-family" class="products-title">MAS COMENTADOS</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 11; i < 15; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/detalleproduct/<%=cripto[i].id%>">
							<figure class="product-box_image">
								<img src="<%=cripto[i].url_imagen%>" alt="<%=cripto[i].nombre_producto%>">
							</figure>
							<article class="product-box_data">
								<h2><%=cripto[i].nombre_producto%></h2>
								<p><%=cripto[i].descripcion_corta%></p>
								<p>Comentarios: <%=cripto[i].num_comentarios%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partial/footer') %> 
	<!-- /footer -->
</body>	
</html>