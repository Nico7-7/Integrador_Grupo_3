<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partial/head') %> 

<body>
	<!-- Header -->
	<%- include('./partial/header') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">RESULTADO DE BUSQUEDA: "<%= busqueda %>" </h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < producto.length; i++){ %> 
				<% if(busqueda == producto[i].nombre){ %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/detalleproduct/<%= producto[i].id %> ">
							<figure class="product-box_image">
								<img src="<%= producto[i].imagen %> " alt="<%= producto[i].nombre %> ">
							</figure>
							<article class="product-box_data">
								<h2><%= producto[i].nombre %> </h2>
								<p><%= producto[i].descripcion_corta %> </p>
								<p>Comentarios: <%= producto[i].comentario %> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %> 
			<% } %>
		</div>
	</div>
		


	<!-- footer -->
	<%- include('./partial/footer') %> 
	<!-- /footer -->
</body>

</html>